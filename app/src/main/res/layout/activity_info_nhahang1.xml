<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ScrollView chứa nội dung chính -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="56dp"> <!-- Khoảng trống cho BottomNavigationView -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Ảnh nhà hàng (Tràn viền hoàn toàn) -->
            <ImageView
                android:id="@+id/restaurantImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/d15"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Tên nhà hàng -->
            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diamond Place 1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/restaurantImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Địa chỉ với icon -->
            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location_dot_solid"
                app:layout_constraintTop_toBottomOf="@id/restaurantName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/restaurantAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15A Hồ Văn Huê, Phường 9, Phú Nhuận, TP.HCM"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/restaurantName"
                app:layout_constraintStart_toEndOf="@id/locationIcon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Giá tiền với icon -->
            <ImageView
                android:id="@+id/moneyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dollar_sign_solid"
                app:layout_constraintTop_toBottomOf="@id/restaurantAddress"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5.000.000đ/bàn"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/restaurantAddress"
                app:layout_constraintStart_toEndOf="@id/moneyIcon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Thanh điều hướng ngang -->
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnIntro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới Thiệu"
                        android:onClick="scrollToIntro" />

                    <Button
                        android:id="@+id/btnMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thực Đơn"
                        android:onClick="scrollToMenu" />

                    <Button
                        android:id="@+id/btnGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thư Viện Ảnh"
                        android:onClick="scrollToGallery" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Nội dung giới thiệu -->
            <TextView
                android:id="@+id/introSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DiamondPlace là nhà hàng tiệc cưới..."
                android:ellipsize="end"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menuSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/introSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/gallerySection"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:text="Thư viện ảnh của nhà hàng"
                app:layout_constraintTop_toBottomOf="@id/menuSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Nút đặt tiệc -->
    <Button
        android:id="@+id/bookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt tiệc ngay"
        android:backgroundTint="@color/red"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:onClick="onBookingButtonClick" />

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/botom_navigation" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
